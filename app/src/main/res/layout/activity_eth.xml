<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thekoladeakande.cryptoconverter.EthActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/eth_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:title="@string/eth"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"
        android:background="@color/grey_700"
        android:text ="@string/eth"
        android:elevation="4dp"/>


    <Button
        android:id="@+id/eth_button"
        android:clickable="true"
        android:onClick="eth_button_click"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background2"
        android:textColor="#212121"
        android:elevation="2dp"
        android:text="Ethereum"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eth_toolbar" />

    <EditText
        android:id="@+id/eth_number"
        android:layout_width="269dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/numberfield_shape"
        android:ems="12"
        android:gravity="right"
        android:textColor="#212121"
        android:hint="enter ETH value here "
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eth_button" />

    <Button
        android:id="@+id/eth_other_currencies"
        android:clickable="true"
        android:onClick="eth_other_currencies_click"
        android:layout_width="237dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/button_background2"
        android:textColor="#212121"
        android:elevation="2dp"
        android:text="Select other currencies"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eth_number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD"
        android:textSize="18sp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/eth_other_currencies"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:background="@drawable/numberfield_shape"/>

    <EditText
        android:id="@+id/currency_Text"
        android:layout_width="269dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/numberfield_shape"
        android:ems="12"
        android:hint="enter currency value here "
        android:textColor="#212121"
        android:gravity="right"
        android:inputType="number"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
    <TextView
        android:id="@+id/btc_summary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/eth_exchange_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/eth_exchange_button"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:text="&#xf219; &#xf0ec; &#xf153;"
        android:background="@drawable/button_background2"
        android:textColor="#212121"
        android:textSize="18sp"
        android:elevation="2dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/currency_Text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</android.support.constraint.ConstraintLayout>
